# -*- mode: conf -*-
# See `man swayimgrc` for details.

[general]
# Start in full screen mode (yes/no)
# fullscreen = no

[viewer]
# Initial scale (optimal, fit, or real)
scale = optimal
# Background for transparent images (none, grid, or RGB, e.g. #112233)
# background = none
# Window background mode/color (none or RGB, e.g. #112233)
# background = none
# Anti-aliasing
antialiasing = no
# Slideshow image duration in seconds
slideshow = no
slideshow_time = 3

[font]
# Font used to show image info
name = JetBrainsMono Nerd Font Mono
# Font size (in pt)
size = 11
# Color for image info text
color = #cccccc

[list]
# Default order of the image list (none, alpha, or random)
order = alpha
# Looping file list mode (yes/no)
loop = yes
# Read directories recursively (yes/no)
recursive = no
# Allways open all files in the same directory
all = yes

# Window class/app_id (default is autogenerated swayimg_XXXX)
#app_id = swayimg

[keys.viewer]
h = step_left      10
j = step_down      10
k = step_up        10
l = step_right     10
Left = step_left   10
Down = step_down   10
Up = step_up       10
Right = step_right 10

Home = first_file
End = last_file
g = first_file
Shift+g = last_file


Shift+p = prev_dir
Shift+n = next_dir
Prior = prev_file
Next = next_file
p = prev_file
n = next_file
Shift+j = next_file
Shift+k = prev_file

F2 = prev_frame
F3 = next_frame
Shift+o = prev_frame
o = next_frame

F4 = animation
s = animation
F9 = slideshow

F11 = fullscreen
f = fullscreen
equal = zoom +10
plus = zoom +10
minus = zoom -10
Ctrl+equal = zoom +1
Ctrl+plus = zoom +1
Ctrl+minus = zoom -1
z = zoom optimal
Shift+z = zoom fit
0 = zoom real
BackSpace = zoom real

F5 = rotate_left
F6 = rotate_right
bracketleft = rotate_left
bracketright = rotate_right

F7 = flip_vertical
F8 = flip_horizontal
a = antialiasing
r = reload
i = info
e = exec
Escape = exit
Return = exit
F10 = exit
q = exit
