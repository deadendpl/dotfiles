# -*- mode: conf-unix -*-
# See `man swayimgrc` for details.

# Initial scale (optimal, fit, or real)
scale = optimal

# Start in full screen mode (yes/no)
fullscreen = no

# Background for transparent images (none, grid, or RGB, e.g. #112233)
background = none

# Window background mode/color (none or RGB, e.g. #112233)
window = none

# Show image info: format, size, EXIF, and current scale (yes/no)
info = yes

# Font used to show image info
font = CodeNewRoman Nerd Font Mono

# Font size (in pt)
font-size = 11

# Color for image info text
font-color = #cccccc

# Default order of the image list (none, alpha, or random)
order = alpha

# Looping file list mode (yes/no)
loop = yes

# Read directories recursively (yes/no)
recursive = no

# Allways open all files in the same directory
all = yes

# Slideshow image duration in seconds
slideshow = 3

# Executable command
exec = echo '%'

# Anti-aliasing
antialiasing = no

# Window class/app_id (default is autogenerated swayimg_XXXX)
#app_id = swayimg

# Enable/disable integration with Sway WM (window position managing)
sway = yes

[keys]
h = step_left
j = step_down
k = step_up
l = step_right
Left = step_left
Down = step_down
Up = step_up
Right = step_right

Home = first_file
End = last_file
g = first_file
G = last_file

P = prev_dir
N = next_dir
Prior = prev_file
Next = next_file
p = prev_file
n = next_file

F2 = prev_frame
F3 = next_frame
O = prev_frame
o = next_frame

F4 = animation
s = animation
F9 = slideshow

F11 = fullscreen
f = fullscreen
equal = zoom_in
plus = zoom_in
minus = zoom_out
z = zoom_optimal
Z = zoom_fit
0 = zoom_real
BackSpace = zoom_reset

F5 = rotate_left
F6 = rotate_right
bracketleft = rotate_left
bracketright = rotate_right

F7 = flip_vertical
F8 = flip_horizontal
a = antialiasing
r = reload
i = info
e = exec
Escape = quit
Return = quit
F10 = quit
q = quit

