#
# wm independent hotkeys
#

# variables are in bspwmrc

# terminal emulator
super + t
    $terminal

# web browser
super + w
    $web_browser

# file manager
super + f
    $file_manager

# text editor
super + e
    $editor

# launcher
super + Return
    $launcher -show drun -theme ~/.config/rofi/themes/drac-list.rasi -show-icons -icon-theme Papirus-Dark

# task manager
super + m
    $terminal -e htop

# bitwarden in rofi
super + b
    bwmenu

# web search
super + slash
    ~/.config/scripts/web-search.sh

# adding copied url to bookmarks
super + alt + slash
    ~/.config/scripts/bookmarking.sh

# editing bookmarks file directly
super + shift + alt + slash
    $terminal -e vim ~/Documents/bookmarks

# bookmarks script
super + shift + slash
    ~/.config/scripts/bookmarks.sh

# volume control
XF86Audio{Raise,Lower}Volume
    pactl set-sink-volume @DEFAULT_SINK@ {+,-}5%
    #amixer set Master 5%{+,-}

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle
    #amixer set Master toggle

# brightness control
XF86MonBrightness{Up,Down}
    enlighten {+,-}3%
    #xbacklight -{inc,dec} 3

# opening display configuration
super + F10
    arandr

# mounting drives
super + F9
    udiskie-dmenu

# wifi script
super + F7
    networkmanager_dmenu

# screenshot
Print
    xfce4-screenshooter

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

## variety

# changing wallpapers
#alt + {Left,Right}
#    variety -{p,n}


#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
    bspc {quit,wm -r}

# power options
super + shift + q
    ~/.config/scripts/power.sh

# close and kill
super + q
    bspc node -c

# alternate between the tiled and monocle layout
super + shift + m
    bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
    bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
    bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + shift + {t,p,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
    bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
    bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
#super + {_,shift + }c
#	bspc node -f {next,prev}.local.!hidden.window
alt + Tab
    bspc node -f next.local.!hidden.window

# shows all windows opened
super + alt + Tab
    $launcher -show window -show-icons -icon-theme Papirus-Dark

# move focused window to the next workspace and switch to that workspace
super + shift + Right
    bash && set id$(bspc query --nodes --node); bspc node --to-desktop next; bspc desktop --focus next; bspc node --focus {$id}

# move focused window to previous workspace and switch to that workspace
super + shift + Left
    bash && set id$(bspc query --nodes --node); bspc node --to-desktop prev; bspc desktop --focus prev; bspc node --focus {$id}

# focus the next/previous desktop in the current monitor
super + ctrl + {Left,Right}
    bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
    bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}
