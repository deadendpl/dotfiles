conky.config = {
  font = 'CodeNewRoman Nerd Font Mono:size=9',
  use_xft = true,
  update_interval = 1.0,
  total_run_times = 0,
  own_window = true,
  own_window_transparent = true,
  own_window_colour = '#282a36',
  own_window_argb_visual = true,
  own_window_argb_value = 200,
  double_buffer = true,
  draw_shades = false,
  draw_outline = false,
  draw_borders = false,
  draw_graph_borders = false,
  minimum_width = 270, minimum_height = 0,
  alignment = 'top_right',
  gap_x = 20, gap_y = 60,
  no_buffers = true,
  uppercase = false,
  cpu_avg_samples = 2,
  net_avg_samples = 2,
  override_utf8_locale = true,
  text_buffer_size = 2048,

  lua_load = '~/.config/conky/dracula.lua',
  lua_draw_hook_post = 'conky_dracula',

    -- COLORS
  color1 = '#f8f8f2',
  color2 = '#44475a',
  color3 = '#bd93f9',
  color4 = '#f1fa8c',
  color5 = '#ff5555',
}

conky.text = [[
${color1}${font CodeNewRoman Nerd Font Mono:bold:size=10}SYSTEM ${hr 2}${font}
${offset 10}${font CodeNewRoman Nerd Font Mono:size=9}${color2}Kernel:${color1}  $kernel
${offset 10}${font CodeNewRoman Nerd Font Mono:size=9}${color2}Shell:${color1}   $shell
${offset 10}${font CodeNewRoman Nerd Font Mono:size=9}${color2}Resolution:${color1}${screen_width}x${screen_height}

${offset 10}${font CodeNewRoman Nerd Font Mono:bold:size=10}${color1}CPU ${hr 2}${font}
${offset 10}${font CodeNewRoman Nerd Font Mono:size=9}${color2}Frequency:${color1}  ${freq_g} GHz
${offset 10}${font CodeNewRoman Nerd Font Mono:size=9}${color2}Temperature:${color1}  $color3${execi 20 sensors | grep 'Package id 0' | cut -c16-20} Â°C
${offset 10}${font CodeNewRoman Nerd Font Mono:size=9}${color2}Usage:${color1}       $color3${cpu}%${color1} ${cpubar 6,110}${color}
${offset 20}${font CodeNewRoman Nerd Font Mono:size=9}${color2}${cpu cpu1}%${alignr}${color3}${cpubar cpu1 6,110}${color}

${offset 10}${font CodeNewRoman Nerd Font Mono:bold:size=10}${color1}MEMORY ${hr 2}${font}
${offset 30}${font CodeNewRoman Nerd Font Mono:size=9}${color2}Percent Used:${color1} ${color3}${memperc}%${alignr}${color2}($mem / $memmax)${color}
${offset 30}${font CodeNewRoman Nerd Font Mono:size=9}${color2}RAM:${color1}        $color3${mem} / ${memmax} MB${color}${color}

${offset 10}${font CodeNewRoman Nerd Font Mono:bold:size=10}${color1}DISK ${hr 2}${font}
${offset 10}${font CodeNewRoman Nerd Font Mono:size=9}${color2}HOME:${color1} ${fs_free /home} free
${offset 10}${font CodeNewRoman Nerd Font Mono:size=9}${color2}ROOT:${color1} ${fs_free /} free

${offset 10}${font CodeNewRoman Nerd Font Mono:bold:size=10}${color1}NETWORK ${hr 2}${font}
${offset 10}${font CodeNewRoman Nerd Font Mono:size=9}${color2}Up:${color1}   $color3${upspeed wlan0} k/s
${offset 10}${font CodeNewRoman Nerd Font Mono:size=9}${color2}Down:${color1} $color3${downspeed wlan0} k/s
]]
